<% function getSubjectDetail(subject) {
    if (subject) {
        return `${subject.subject_name}
            <span class="detail">${subject.subject_type} ${subject.credit}単位 ${subject.subject_location}
                欠課:${subject.absences} 遅刻:${subject.tardies}</span>
                <button class='add-subject-btn popup'><i class="fa-solid fa-pen-to-square"></i></button>`;
    }
    return `<button class='edit-subject-btn popup'><i class="fa-solid fa-plus"></i></button>`;
} %>

<!DOCTYPE html>

<html lang="ja">
<head>
    <%- include('head.ejs') %>
    <link href="/css/top.css" rel="stylesheet">
</head>
<body>
    <%- include('header.ejs') %>
    <%- include('sidebar.ejs') %>
    <main>
        <table>
            <tr>
              <th style="width:5%;">時間</th>
              <th>月</th>
              <th>火</th>
              <th>水</th>
              <th>木</th>
              <th>金</th>
            </tr>
            <% for (let i = 0; i < 4; i++) { %>
            <tr>
              <td ><%= i+1 %></td>
              <td><%- getSubjectDetail(monSubjects[i]) %></td>
              <td><%- getSubjectDetail(tueSubjects[i]) %></td>
              <td><%- getSubjectDetail(wedSubjects[i]) %></td>
              <td><%- getSubjectDetail(thuSubjects[i]) %></td>
              <td><%- getSubjectDetail(friSubjects[i]) %></td>
            </tr>
            <% } %>
        </table>
    </main>
    <%- include('footer.ejs') %>
    <div class="modal-container">
        <div class="modal-body">
          <!-- 閉じるボタン -->
          <div class="modal-close">×</div>
          <!-- モーダル内のコンテンツ -->
          <div class="modal-content">
            
          </div>
        </div>
      </div>
</body>
</html>
